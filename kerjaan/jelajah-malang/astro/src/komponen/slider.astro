<link
    rel="stylesheet"
    type="text/css"
    href="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css"
/><link
    rel="stylesheet"
    type="text/css"
    href="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick-theme.css"
/>

{
    [1, 2].map((x) => (
        <div class={x == 1 ? "slider-for" : "slider-nav"}>
            {[1, 2, 3, 4, 5, 6, 7].map((x) => (
                <div>
                    <img src={`/gambar/${x}.jpg`} alt="" />
                </div>
            ))}
        </div>
    ))
}

<script is:inline src="/js/jquery-3.7.1.min.js"></script>
<script
    type="text/javascript"
    src="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"
    is:inline></script>
<script is:inline>
$(".slider-for").slick({
    slidesToShow: 1,
    slidesToScroll: 1,
    arrows: false,
    fade: true,
    asNavFor: ".slider-nav",
});
$(".slider-nav").slick({
    slidesToShow: 3,
    slidesToScroll: 1,
    asNavFor: ".slider-for",
    dots: true,
    centerMode: true,
    focusOnSelect: true,
});
</script>

<style is:global>
    .slick-arrow {
        display: none !important;
    }
    .slider-for img {
        width: 100%;
        aspect-ratio: 10 / 7;
        object-fit: cover;
    }
    .slider-nav img {
        width: 500px;
        height: 300px;
        object-fit: cover;
        cursor: pointer;
    }
</style>
